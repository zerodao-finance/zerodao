{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "lib",
    "declarationDir": "lib"
  },
  "include": ["src.ts/*"]
}
