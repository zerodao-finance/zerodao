{
  "compilerOptions": {
    "lib": ["ES2015", "es5", "dom"],
    "preserveWatchOutput": true,
    "pretty": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "moduleResolution": "node",
    "target": "ES2015",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src.ts/**/*", "test/*"],
  "exclude": ["node_modules"]
}
