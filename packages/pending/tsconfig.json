{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2020",
      "noImplicitAny": false,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "src.ts/lib",
      "declaration": true,
      "types": [
        "node"
      ]
    },
    "include": [
       "src.ts/**/*"
    ], 
    "exclude": [
        "lib/**/*"
      ]
  }