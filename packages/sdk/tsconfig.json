// TSCONFIG FROM P2P
{
  "compilerOptions": {
    "strict": false,
    "outDir": "lib",
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "lib": [
      "ES2020",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.BigInt",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "isolatedModules": true,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importsNotUsedAsValues": "preserve",
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "stripInternal": true,
  },
  "types": ["node"],
  "include": ["./src.ts/*.ts"]
}
