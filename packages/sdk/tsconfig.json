{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true
  },
  "include": ["./src.ts/*"],
  "exclude": ["./lib"]
}
